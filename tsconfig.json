{
  "compilerOptions": {
    "lib": ["ES2019"],
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",

    "rootDir": "./src",
    "outDir": "./dist",

    // Include source maps for Jest
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "jest.config.ts",
    "**/*.test.ts",
    "**/*.test.ts.snap",
    "dist",
  ]
}